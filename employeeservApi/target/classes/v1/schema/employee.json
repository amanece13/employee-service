{
  "title": "Employee resource",
  "description": "Employee resource object",
  "type": "object",
  "properties": {
    "id": {
      "description": "employee id",
      "type": "integer"
    },
    "first_name": {
      "description": "first name",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "last_name": {
      "description": "last name",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "dob": {
      "description": "Date of Birth",
      "type": "string",
      "format": "date",
      "customPattern" : "yy-MM-dd"
    },
    "address": {
      "description": "Address",
      "type": "address",
      "properties": {
        "line1": {
          "description": "Line 1",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "line2": {
          "description": "Line 2",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "city": {
          "description": "city name",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "state": {
          "description": "state name",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "country": {
          "description": "country name",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "zipcode": {
          "description": "zip code",
          "type": "integer"
        }
      },
      "required": [
        "line1",
        "city",
        "state",
        "country",
        "zipcode"
      ]
    }
  },
  "required": [
    "first_name",
    "last_name",
    "dob",
    "address"
  ]
}


